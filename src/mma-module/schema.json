{
  "$schema": "http://json-schema.org/schema",
  "$id": "MmaModuleSchema",
  "title": "MMA Module Options",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the feature module.",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "skipImport": {
      "type": "boolean",
      "description": "Flag to skip importing the module into the root module.",
      "default": false
    }
  },
  "required": ["name"]
}